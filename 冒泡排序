#include<stdio.h>
int main()
{
	int i,j,tmp;//tmp为中间变量用于交换 
	int n=6;
	int a[6]={10,7,3,1,6,3};
	//进行n-1趟排序
	for(i=0;i<n-1;i++)
	{	//从第0位开始，依次和下一位的数进行对比
		for(j=0;j<n-i-1;j++)
		/*从每次内层for比上一次少一的原因
		  是每次for都能找出最大的数并固定
		  下来因此下一循环只需要找出仅此
		  于这个数的数就行了不用在于这个
		  数进行比较 
		*/ 
		{
			if(a[j]>a[j+1])//如果下一个的数大，那么就交换位置 
			{
				tmp=a[j+1];
				a[j+1]=a[j];
				a[j]=tmp;
			}
		}
	 } 
	for(i=0;i<6;i++)
	{
		printf("%d ",a[i]);
	 } 
	return 0; 
}
